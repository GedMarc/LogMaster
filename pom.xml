<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.jwebmp</groupId>
        <artifactId>jwebmp-bom</artifactId>
        <version>0.0.0_0-SNAPSHOT</version>
    </parent>

    <artifactId>guiced-log-master</artifactId>
    <packaging>jar</packaging>

    <name>Log Master</name>
    <description>Provides Asynchronous and Dynamic Log Handler support for JDK1.8 logging API.
        Access via LogFactory.
    </description>
    <url>https://github.com/GedMarc/LogMaster</url>

    <properties>
        <src.dir>src</src.dir>
        <test.dir>test</test.dir>
    </properties>

    <repositories>
        <repository>
            <id>jwebmp-snapshot</id>
            <name>JWebMPArtifactory-snapshots</name>
            <url>https://jwebmp.com/artifactory/libs-snapshot</url>
        </repository>
    </repositories>

    <build>
        <sourceDirectory>${src.dir}</sourceDirectory>
        <testSourceDirectory>${test.dir}</testSourceDirectory>
    </build>

    <dependencies>
        <!-- Test Dependencies -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
        </dependency>

        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-all</artifactId>
        </dependency>

        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
        </dependency>
    </dependencies>

</project>
