<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.jwebmp</groupId>
    <artifactId>log-master</artifactId>
    <version>0.0.0_0</version>
    <packaging>jar</packaging>

    <name>Log Master</name>
    <description>Provides Asynchronous and Dynamic Log Handler support for JDK1.8 logging API.
        Access via LogFactory.
    </description>
    <url>https://github.com/GedMarc/GuiceInjection</url>

    <licenses>
        <license>
            <name>GPL 3</name>
            <url>https://www.gnu.org/licenses/gpl-3.0.en.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <repositories>

        <repository>
            <id>jwebswing-snapshot</id>
            <name>JWebSwingArtifactory-snapshots</name>
            <url>https://jwebswing.com/artifactory/libs-snapshot</url>
        </repository>
    </repositories>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <src.dir>src</src.dir>
        <test.dir>test</test.dir>
        <maven.jar.version>3.0.2</maven.jar.version>
        <maven.dependency.version>3.0.1</maven.dependency.version>
        <maven.javadoc.version>2.10.4</maven.javadoc.version>
        <maven.source.version>2.1.2</maven.source.version>
        <maven.resources.version>3.0.2</maven.resources.version>
        <netbeans.hint.license>gpl30</netbeans.hint.license>
        <license.dir>${basedir}</license.dir>

        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <sonar.host.url>https://jwebmp.com/sonar</sonar.host.url>
        <sonar.exclusions>**bower_components</sonar.exclusions>
    </properties>

    <build>
        <sourceDirectory>${src.dir}</sourceDirectory>
        <testSourceDirectory>${test.dir}</testSourceDirectory>
        <finalName>log-master</finalName>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                </configuration>
                <executions>
                    <execution>
                        <id>testJar</id>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
                <version>${maven.jar.version}</version>
            </plugin>
            <plugin>
                <groupId>org.sonarsource.scanner.maven</groupId>
                <artifactId>sonar-maven-plugin</artifactId>
                <version>3.3.0.603</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.7</version>
            </plugin>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.7.9</version>
            </plugin>

        </plugins>
    </build>

    <dependencies>
        <!-- Test Dependenies -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <version>5.0.2</version>
            <scope>test</scope>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-all</artifactId>
            <version>1.3</version>
            <scope>test</scope>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>org.assertj</groupId>
            <artifactId>assertj-core</artifactId>
            <version>1.5.0</version>
            <scope>test</scope>
            <type>jar</type>
        </dependency>

        <dependency>
            <groupId>org.mockito</groupId>
            <artifactId>mockito-core</artifactId>
            <version>1.10.19</version>
            <scope>test</scope>
            <type>jar</type>
        </dependency>
    </dependencies>

    <distributionManagement>
        <snapshotRepository>
            <id>snapshot</id>
            <name>JWebSwingArtifactory-snapshots</name>
            <url>https://jwebswing.com/artifactory/libs-snapshot-local</url>
        </snapshotRepository>
        <repository>
            <id>central</id>
            <name>JWebSwingArtifactory-releases</name>
            <url>https://jwebswing.com/artifactory/libs-release-local</url>
        </repository>
    </distributionManagement>
    <organization>
        <name>Marc Magon</name>
        <url>http://jwebmp.com</url>
    </organization>
    <scm>
        <url>https://github.com/GedMarc?tab=repositories</url>
        <developerConnection>Marc Magon</developerConnection>
    </scm>
    <issueManagement>
        <system>Github</system>
        <url>https://github.com/GedMarc/LogMaster/issues</url>
    </issueManagement>
    <ciManagement>
        <system>TeamCity</system>
        <url>http://jwebmp.com/teamcity</url>
    </ciManagement>
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.7.9</version>
                <reportSets>
                    <reportSet>
                        <reports>
                            <report>report</report>
                        </reports>
                    </reportSet>
                </reportSets>
            </plugin>
        </plugins>
    </reporting>
</project>
